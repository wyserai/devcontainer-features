{
  "features": [
    {
      "id": "azextension",
      "version": "0.1.0",
      "name": "Azure CLI extension",
      "description": "Install Azure CLI extensions",
      "options": {
        "names": {
          "type": "array",
          "description": "Enter the names of the Azure CLI extensions you wish to add"
        }
      },
      "installsAfter": [
        "ghcr.io/devcontainers/features/azure-cli"
      ]
    },
    {
       "id": "pulumi",
       "version": "0.1.0",
       "name": "Pulumi CLI",
       "description": "Install Pulumi CLI",
       "options": {
         "version": {
          "type": "string",
          "proposals": [
              "latest"
          ],
          "default": "latest",
          "description": "Select or enter an Pulumi CLI version."
         }
       },
       "containerEnv": {
         "AZURE_KEYVAULT_AUTH_VIA_CLI": "true",
         "PATH": "/usr/local/pulumi/bin:${PATH}"
       }
     },
     {
       "id": "azurefunctools",
       "version": "0.1.0",
       "name": "Azure Function Tools",
       "description": "Install Azure Function Tools"
     }
  ]
}
